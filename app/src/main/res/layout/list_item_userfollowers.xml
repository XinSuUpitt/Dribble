<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/userfollowers_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <ImageView
            android:id="@+id/userfollowers_author_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            tools:src="@drawable/user_picture_placeholder"/>

        <TextView
            android:id="@+id/userfollowers_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userfollowers_author_picture"
            android:layout_toRightOf="@id/userfollowers_author_picture"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="Author name" />

        <TextView
            android:id="@+id/userfollowers_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/userfollowers_author"
            android:layout_below="@id/userfollowers_author"
            android:drawableLeft="@drawable/ic_location_on_black_18dp"
            android:drawablePadding="3dp"
            android:text="location"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/userfollowers_location"
            android:layout_below="@id/userfollowers_location"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="links: " />

            <TextView
                android:id="@+id/userfollowers_weblink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="www.dribbble.com"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>